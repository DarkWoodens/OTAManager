<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"

    tools:context="splusteam.center.ota.ota_center.settings">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardView2">

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/about_profile2"
        android:id="@+id/imageView"
        android:onClick="openInformations"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignEnd="@+id/cardView2" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/about_profile"
        android:layout_marginTop="56dp"
        android:id="@+id/imageView3"
        android:onClick="openInformations"
        android:layout_below="@+id/cardView2"
        android:layout_alignStart="@+id/cardView2" />

    <TextView
        android:text="Iacob Ionut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="13dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView" />

    <TextView
        android:text="Cristian Campean-Craciun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="19dp" />


</RelativeLayout>
