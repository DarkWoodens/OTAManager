<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="splusteam.center.ota.ota_center.MainActivity"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textdevice"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:id="@+id/imageView2"
        android:background="@drawable/new_background_3"
        android:contentDescription="nothing"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_button2"
        android:id="@+id/button_update"
        android:theme="@style/Platform.AppCompat"
        android:nestedScrollingEnabled="false"
        android:focusable="false"
        android:enabled="true"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/textbuild"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/progressBar1"
        android:visibility="invisible"
        android:layout_above="@+id/button_update"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/your_device_are"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/button_update" />

    <TextView
        android:text="@string/you_are_curently_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAllCaps="false"
        android:textStyle="normal|italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textdevice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/textnumber"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textbuild"
        android:layout_toStartOf="@+id/textdevice"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progres"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button_update"
        android:layout_alignBottom="@+id/button_update"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/json"
        android:visibility="invisible"
        android:layout_above="@+id/progressBar1"
        android:layout_alignStart="@+id/button_update" />

    <Button
        android:text="Cancel Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_update"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button_update"
        android:layout_alignBottom="@+id/button_update"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
